            <pIdentCutoff value="60"/>
            <!--Sets Query coverage cutoff at the given rank-->
            <QueryCoverageCutoff value="80"/>
            <!--Sets E-value ratio cutoff at the given rank-->
            <EvalueRatioCutoff value="100"/>
